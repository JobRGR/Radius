.menu
  display inline-block
  width 30%
  height 100%
  box-sizing border-box
  border-left 1px solid #edeeee
  background #fff
  position absolute
  z-index 5

.tower-header
  margin-top 30px
  text-align center
  width 100%
  font-size 20px
  text-transform uppercase
  line-height 50px

.tower-table
  text-transform uppercase
  font-size 14px
  line-height 30px
  .header-row
    color rgba(0, 0, 0, 0.5)
  .tower-row
    display flex
    width 100%
    align-items center
    .tower-row-column
      flex 1
      padding 5px
      text-align center
    .tower-row-column-big
      flex 1.7
      padding 5px
      text-align center
