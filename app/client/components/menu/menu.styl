.menu
  display inline-block
  width 30%
  height 100%
  box-sizing border-box
  border-left 1px solid #edeeee
  background #fff
  position absolute
  z-index 5

.header-row
  color rgba(0, 0, 0, 0.5)

.city
  &-header
    margin-top 30px
    text-align center
    width 100%
    font-size 20px
    text-transform uppercase
    line-height 50px
  &-search
    text-align center
  &-table
    text-transform uppercase
    font-size 14px
    line-height 30px
  &-row
    display flex
    width 100%
    align-items center
    &-column
      flex 1
      padding 5px
      text-align center
      &-big
        flex 1.7
        padding 5px
        text-align center
